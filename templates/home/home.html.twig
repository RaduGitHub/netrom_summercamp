{% extends 'base.html.twig' %}

{% block title %}Welcome to WhoBlockedMe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-center">
        <h1>Main page</h1>
    </div>
    <div class="d-flex align-items-center justify-content-center">
        {% if is_granted('ROLE_USER') %}
        <div class="row px-5 border border-dark text-center ">
            <div class="col">
                <div class="row mt-3">
                    <a type="button" class="btn btn-primary" href="{{ path('app_logout') }}">Logout</a>
                </div>
                <div class="row mt-3">
                    <a type="button" class="btn btn-primary" href="{{ path('change_password') }}">Change Password</a>
                </div>
                <div class="row mt-3">
                    <a type="button" class="btn btn-primary" href="{{ path('license_plate_index') }}">View License
                        Plates</a>
                </div>
                {#<div class="row mt-3">
                    <a type="button" class="btn btn-primary" href="{{ path('license_plate_new') }}">Add License
                        Plates</a>
                </div>#}
                <div class="row mt-3">
                    <a type="button" class="btn btn-primary" href="{{ path('iblocked') }}"> I blocked someone!</a>
                </div>
                <div class="row mt-3 mb-3">
                    <a type="button" class="btn btn-primary" href="{{ path('iGotBlocked') }}">I got blocked!</a>
                </div>
            </div>
            {% else %}
                <div class="row align-items-center">
                    <div class="col">
                        <div class="row mt-3">
                            <a type="button" class="btn btn-primary" href="{{ path('app_login') }}">Login</a>
                        </div>
                        <div class="row mt-3">
                            <a type="button" class="btn btn-primary" href="{{ path('user_new') }}">Create Account</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
